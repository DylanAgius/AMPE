GlobalInputs {
   call_abort_in_serial_instead_of_exit = FALSE
}

Main {
   dim = 2
   base_name = "test_restart.2d"
// log file parameters
   log_all_nodes    = TRUE

// visualization dump parameters
   viz_dump_interval     = 0         // zero to turn off
   viz_dump_dirname     = "viz-test-2d-re"

// restart dump parameters
   restart_interval       = 1         // zero to turn off

   plotting_interval = 0

}

CartesianGeometry{
   domain_boxes	= [(0,0),(9,2)], [(0,3), (9,4)]

   x_lo = 0.e0 , 0.e0   // lower end of computational domain.
   x_up = 1.e0 , 0.e5 // upper end of computational domain.

   periodic_dimension = 1,0
}

PatchHierarchy {
   max_levels = 2         // Maximum number of levels in hierarchy.

   ratio_to_coarser {      // vector ratio to next coarser level
      level_1 = 2 , 2
      level_2 = 2 , 2
   }
}
