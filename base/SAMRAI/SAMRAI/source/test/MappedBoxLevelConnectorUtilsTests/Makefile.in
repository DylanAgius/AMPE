SAMRAI	      =	@top_srcdir@
SRCDIR	      =	@srcdir@
SUBDIR        = source/test/MappedBoxLevelConnectorUtilsTests
VPATH	      =	@srcdir@
TESTTOOLS     = ../testtools
OBJECT        = ../../..

CPPFLAGS_EXTRA =  -DTESTING=1

default: check

include $(OBJECT)/config/Makefile.config

NUM_TESTS = 17

TEST_NPROCS = @TEST_NPROCS@

main:	main-mblcu.o $(LIBSAMRAIDEPEND)
	$(CXX) $(CXXFLAGS) $(LDFLAGS) main-mblcu.o $(LIBSAMRAI) $(LDLIBS) -o $@


check:		main
	$(MAKE) check2d
	$(MAKE) check3d

check2d:
	for i in test_inputs/*.2d.input; do	\
	  $(OBJECT)/config/serpa-run $(TEST_NPROCS) ./main $${i};	\
	done

check3d:
	for i in test_inputs/*.3d.input; do	\
	  $(OBJECT)/config/serpa-run $(TEST_NPROCS) ./main $${i};	\
	done


checkcompile: main

checktest:
		rm -f makecheck.logfile
		$(MAKE) check 2>&1 | $(TEE) makecheck.logfile
		$(TESTTOOLS)/testcount.sh $(TEST_NPROCS) $(NUM_TESTS) makecheck.logfile
		rm -f makecheck.logfile

clean:
		$(SAMCLEAN)
		$(RM) main

include $(SRCDIR)/Makefile.depend
