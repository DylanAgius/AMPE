#!/bin/sh

debug="--enable-debug"
if test "@DEBUG@" = "opt"; then
   debug="--enable-opt";
fi

mpi_include=`echo '@MPIINCLUDE@' | sed 's/-I//g'`

./configure $debug \
    CC=@CC@ \
    CFLAGS="@C_FLAGS@" \
    CXX=@CXX@ \
    CXXFLAGS="@CXX_FLAGS@" \
    F77=@F77@ \
    FFLAGS="@F77_FLAGS@" \
    --with-MPI-include="$mpi_include" \
    --prefix=@BASE_BUILD_DIR@/sundials

